@{
    ViewData["Title"] = "Home Page";
}



<div id="myCarousel" class="carousel slide mydiv" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/bn1.jpg" alt="ASP.NET" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/bn2.jpeg" alt="Visual Studio" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/bn3.jpg" alt="Microsoft Azure" class="img-responsive" />
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <br />
    <br />
    <div class="col-md-6">
        <img src="~/images/iitu.png" width="400" height="200" />
    </div>
    <div class="col-md-4 col-lg-offset-1">
        <div>
            <h4>
                <a asp-area="Identity" asp-page="/Account/Login">
                    <i class="fas fa-sign-in-alt"></i>
                    Login
                </a> to customize your budget
            </h4>
        </div>
        <br />
        <div>
            <h4>
                <a asp-area="Identity" asp-page="/Account/Register">
                    <i class="fas fa-user-plus"></i>
                    Register
                </a> as a new user
            </h4>
        </div>
        <input class="btn btn-success" id="hide" type="button" value="Hide" />
        <input class="btn btn-danger" id="show" type="button" value="Show" />
    </div>
</div>

@section Scripts{
    <script type="text/javascript"
            src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

    <script type="text/javascript" language="javascript">$(document).ready(function () {

            $("#show").click(function () {
                $(".mydiv").show(1000);
                document.getElementById()
            });


            $("#hide").click(function () {
                $(".mydiv").hide(1000);
            });

        });</script>
}